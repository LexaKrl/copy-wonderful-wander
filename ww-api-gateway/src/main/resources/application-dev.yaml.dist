server:
  port: 8080

spring:
  application:
    name: api-gateway
  main:
    web-application-type: reactive
  cloud:
    gateway:
      discovery:
        locator:
          enabled: true
          lower-case-service-id: true
      routes:
        - id: user-service
          uri: lb://user-service
          predicates:
            - Path=/api/users/**, /api/auth/**
          filters:
            - JwtAuthentication
        - id: photo-management-service
          uri: lb://photo-management-service
          predicates:
            - Path=/api/photos/**
          filters:
            - JwtAuthentication
    consul:
      host: localhost
      port: 8500
      discovery:
        prefer-ip-address: true
        instance-id: ${spring.application.name}:${random.value}
        service-name: ${spring.application.name}
        register: true
        register-health-check: true

management:
  endpoints:
    web:
      exposure:
        include: "*"

jwt:
  access-token-duration: 3_600_00
  refresh-token-duration: 86_400_00
  time-token-end-soon: 900_000
  secret-key:
